<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox prefWidth="183.0" style="-fx-background-color: #0598ff;" stylesheets="@NewFile.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizzbus.view.systeme.ViewMenu">
   <children>
      <HBox alignment="CENTER">
         <children>
            <VBox alignment="CENTER" style="-fx-background-color: #748CF1; -fx-background-radius: 100; -fx-border-radius: 100; -fx-border-width: 2; -fx-border-color: #036ab2;">
               <children>
                  <ImageView fitHeight="52.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/tuto1.png" />
                     </image>
                  </ImageView>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </HBox>
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#doDashBoard" styleClass="menu-side" text="DashBoard" VBox.vgrow="ALWAYS">
         <graphic>
            <FontIcon iconLiteral="bxs-dashboard" />
         </graphic>
      </Button>
      <Button fx:id="quizz" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#doGestionQuizz" styleClass="menu-side" text="Quizz" VBox.vgrow="ALWAYS">
         <graphic>
            <FontIcon iconLiteral="bx-receipt" />
         </graphic>
      </Button>
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#doSession" styleClass="menu-side" text="Session" VBox.vgrow="ALWAYS">
         <graphic>
            <FontIcon iconLiteral="bxs-devices" />
         </graphic>
      </Button>
      <Button fx:id="utilisateur" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#doUtilisateur" styleClass="menu-side" text="Utilisateur" VBox.vgrow="ALWAYS">
         <graphic>
            <FontIcon iconLiteral="bx-user" />
         </graphic>
      </Button>
   </children>
   <padding>
      <Insets top="50.0" />
   </padding>
</VBox>
